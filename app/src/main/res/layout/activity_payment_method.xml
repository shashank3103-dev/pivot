<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paymentMethod">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_vector"
            android:layout_width="30dp"
            android:layout_height="30"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="392dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="832dp"
            android:scaleType="centerInside"
            android:src="@drawable/drawable_image_credit" />


        <TextView
            android:id="@+id/text_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="826.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Payment Method"
            android:textColor="#FF223263"
            android:textSize="28dp" />
    </RelativeLayout>

</RelativeLayout>